= form_for @cardregistration do |f|
  - if @cardregistration.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cardregistration.errors.count, "error")} prohibited this cardregistration from being saved:"
      %ul
        - @cardregistration.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ip_address
    = f.text_field :ip_address
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :card_type
    = f.text_field :card_type
  .field
    = f.label :card_expires_on
    = f.date_select :card_expires_on
  .actions
    = f.submit 'Save'
